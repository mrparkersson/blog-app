<div class="user_con">

    <div class="user_data">

      <h2><%= @user.name%></h2>

      <p>Number of posts: <%= @user.postcounter %></p>

    </div>

  </div>




<% @posts.each do |post| %>

  <div class="user_con">

    <div class="user_data_post">

     <%= link_to "#{post.title}", user_post_path(@user.id, post.id), class:"anything" %> 

      <h3><%= post.text%></h3>

      <p>Number of comments: <%= post.comments_counter %> <span>Number of likes: <%= post.likes_counter %></span></p>

    </div>

  </div>

  <div class="comments">

    <% post.return_five_most_recent_comments do |comment| %>

       <h2><%= comment.user.name%>: <%= comment.text%></h2>
    <%end%>
  </div>
<%end%>




<div class="button-wrapper">

  <button class="button">

      Pagination

  </button>

</div>